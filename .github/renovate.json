{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "develop"
  ],
  "timezone": "Asia/Kolkata",
  "assignees": [
    "mslalith"
  ],
  "packageRules": [
    {
      "groupName": "Kotlin",
      "groupSlug": "kotlin",
      "matchPackagePrefixes": [
        "com.google.devtools.ksp",
        "androidx.compose.compiler"
      ],
      "matchPackagePatterns": [
        "org.jetbrains.kotlin.*"
      ]
    }
  ]
}
